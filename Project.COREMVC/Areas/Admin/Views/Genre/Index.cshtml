@model List<Genre>

<link href="/OuterTools/css/bootstrap.min.css" rel="stylesheet">

<section class="panel">
    <header class="panel-heading">
        Yeni tur eklemek icin <a asp-action="CreateGenre">tıklayınız</a>
    </header>
    <div class="panel-body">
        <div class="adv-table">
            <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                <thead>
                    <tr>
                        <th>Tur ID</th>
                        <th>Tur Ismi</th>
                        <th class="hidden-phone">Durumu</th>
                        <th class="hidden-phone">Guncelle</th>
                        <th class="hidden-phone">Sil</th>
                        <th class="hidden-phone">Yok et</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (Genre item in Model)
                    {

                        <tr class="gradeX">
                            <td>@item.ID</td>
                            <td>   @item.GenreName  </td>
                            <td class="hidden-phone">@item.Status</td>
                            <td class="center hidden-phone"><a asp-action="UpdateGenre" asp-route-id="@item.ID" class="btn btn-warning"> Güncelle </a>   </td>
                            <td class="center hidden-phone">  <a asp-action="DeleteGenre" asp-route-id="@item.ID" class="btn btn-danger"> Sil </a>   </td>
                            <td class="center hidden-phone">  <a asp-action="DestroyGenre" asp-route-id="@item.ID" class="btn btn-success"> Yok Et </a>   </td>

                        </tr>
                    }


                </tbody>
            </table>

        </div>
    </div>
</section>