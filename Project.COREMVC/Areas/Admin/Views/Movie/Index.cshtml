@model List<Movie>

<link href="/OuterTools/css/bootstrap.min.css" rel="stylesheet">

<section class="panel">
    <header class="panel-heading">
        Yeni Film eklemek icin <a asp-action="CreateMovie">tıklayınız</a>
    </header>
    <div class="panel-body">
        <div class="adv-table">
            <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                <thead>
                    <tr>
                        <th>Movie ID</th>
                        <th>MovieName</th>                      
                        <th class="hidden-phone">Durumu</th>               
                        <th class="hidden-phone">Guncelle</th>
                        <th class="hidden-phone">Sil</th>
                        <th class="hidden-phone">Yok et</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (Movie item in Model)
                    {

                        <tr class="gradeX">
                            <td>@item.ID</td>
                            <td>@item.MovieName</td>        
                            <td class="hidden-phone">@item.Status</td>                          
                            <td class="center hidden-phone"><a asp-action="UpdateMovie" asp-route-id="@item.ID" class="btn btn-warning"> Güncelle </a>   </td>
                            <td class="center hidden-phone">  <a asp-action="DeleteMovie" asp-route-id="@item.ID" class="btn btn-danger"> Sil </a>   </td>
                            <td class="center hidden-phone">  <a asp-action="DestroyMovie" asp-route-id="@item.ID" class="btn btn-success"> Yok Et </a>   </td>

                        </tr>
                    }


                </tbody>
            </table>

        </div>
    </div>
</section>
