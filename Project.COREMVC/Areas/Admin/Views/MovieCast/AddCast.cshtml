@model MovieCastSharedPageVM

<h3>Press for Get Movies <a asp-controller="Movie" asp-action="Index">Press</a></h3>
<link href="/OuterTools/css/bootstrap.min.css" rel="stylesheet">
<form asp-controller="MovieCast" asp-action="AddCast" method="post" class="form">


    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Cast ID</label>
        <input asp-for="CastID" class="form-control">
    </div>
    <button class="btn btn-primary">
        Add Cast to Movie
    </button>

    <section class="panel">
        <header class="panel-heading">
        </header>
        <div class="panel-body">
            <div class="adv-table">
                <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                    <thead>
                        <tr>
                            <th>Cast ID</th>
                            <th>First Name</th>
                            <th>Last Name</th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (Cast item in Model.Casts)
                        {

                            <tr class="gradeX">
                                <td>@item.ID</td>
                                <td>@item.FirstName</td>
                                <td>@item.LastName</td>


                            </tr>
                        }


                    </tbody>
                </table>

            </div>
        </div>
    </section>



</form>