@model MovieResponsePageVM

<link href="/OuterTools/css/bootstrap.min.css" rel="stylesheet">

<section class="panel">
   
    <div class="panel-body">
        <div class="adv-table">
            <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                <thead>
                    <tr>
                        <th>Movie ID</th>
                        <th>MovieName</th>  
                        <th>Genre Add</th>
                        
                        <th class="hidden-phone">Yok et</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (MovieResponseModel item in Model.Movies)
                    {

                        <tr class="gradeX">
                            <td>@item.ID</td>
                            <td>@item.MovieName</td>
                            <td class="center hidden-phone"> <a asp-controller="Movie"  asp-action="AddGenre" asp-route-id="@item.ID" class="btn btn-warning"> Genre Add </a>   </td>                     
                            <td class="center hidden-phone">  <a asp-action="DestroyMovie" asp-route-id="@item.ID" class="btn btn-success"> Yok Et </a>   </td>

                        </tr>
                    }


                </tbody>
            </table>

        </div>
    </div>
</section>
