@model MovieGenreSharedPageVM

<h3>Press for Get Movies <a asp-controller="Movie" asp-action="Index">Press</a></h3>
<link href="/OuterTools/css/bootstrap.min.css" rel="stylesheet">
<form asp-controller="MovieGenre" asp-action="AddGenre" method="post" class="form">


    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Genre ID</label>
        <input asp-for="GenreID" class="form-control">
    </div>
    <button class="btn btn-primary">
        Add Genre to Movie
    </button>

    <section class="panel">
        <header class="panel-heading">
           
        </header>
        <div class="panel-body">
            <div class="adv-table">
                <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                    <thead>
                        <tr>
                            <th>Genre ID</th>
                            <th>Genre Name</th>
                            
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (Genre item in Model.Genres)
                        {

                            <tr class="gradeX">
                                <td>@item.ID</td>
                                <td>@item.GenreName</td>
                                

                            </tr>
                        }


                    </tbody>
                </table>

            </div>
        </div>
    </section>



</form>