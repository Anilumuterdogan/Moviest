@model MovieGenreMix

<link href="/OuterTools/css/bootstrap.min.css" rel="stylesheet">

<section class="panel">
    <header class="panel-heading">
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Genre giriniz</label>
            <input asp-for="MovieGenreResponse.GenreID" class="form-control">
        </div>
        <button class="btn btn-primary">
            Add Movie
        </button>

    </header>
    <div class="panel-body">
        <div class="adv-table">
            <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                <thead>
                    <tr>
                        <th>Tur ID</th>
                        <th>Tur Ismi</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (Genre item in Model.Genres)
                    {

                        <tr class="gradeX">
                            <td>@item.ID</td>
                            <td>   @item.GenreName  </td>
                        </tr>
                    }


                </tbody>
            </table>

        </div>
    </div>
</section>