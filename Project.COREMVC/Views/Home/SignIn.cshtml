@model UserSignInRequestModel
<center>
    <h1>
        Sign In'e hoşgeldiniz
        <br>
        @TempData["Message"]
    </h1>
<form asp-action="SignIn" asp-controller="Home" method="post" class="p-3 w-75 m-auto">


    <input type="hidden" asp-for="ReturnUrl" />

    <div class="mb-3">
        <label>Kullanıcı Adı</label>
        <span class="text-danger" asp-validation-for="UserName"></span>
        <input asp-for="UserName" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Şifre</label>
        <span class="text-danger" asp-validation-for="Password"></span>

        <input asp-for="Password" class="form-control" />
    </div>

    <div class="mb-3">
        <input  type="checkbox" asp-for="RememberMe" class="form-check-input"/>
      

        <label class="form-check-label">
            Beni Hatırla?
        </label>
    </div>


    <div class="mb-3">
        <button class="btn btn-primary">Giriş Yap</button>
    </div>
        


    <div class="text-danger" asp-validation-summary="ModelOnly">
    </div>

</form>
</center>