<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="/OuterTools/img/favicon.png">

    <title>FlatLab - Flat & Responsive Bootstrap Admin Template</title>

    <!-- Bootstrap core CSS -->
    <link href="/OuterTools/css/bootstrap.min.css" rel="stylesheet">
    <link href="/OuterTools/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="/OuterTools/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="/OuterTools/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.css" rel="stylesheet" type="text/css" media="screen" />
    <link rel="stylesheet" href="/OuterTools/css/owl.carousel.css" type="text/css">
    <!-- Custom styles for this template -->
    <link href="/OuterTools/css/style.css" rel="stylesheet">
    <link href="/OuterTools/css/style-responsive.css" rel="stylesheet" />

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
      <script src="js/html5shiv.js"></script>
      <script src="js/respond.min.js"></script>
    <![endif]-->
    
    
</head>

<body>

    <section id="container">
        <!--header start-->
        <header class="header white-bg">
            <div class="sidebar-toggle-box">
                <div data-original-title="Toggle Navigation" data-placement="right" class="icon-reorder tooltips"></div>
            </div>
            <!--logo start-->
            <a href="index.html" class="logo">MOVIE<span>ST</span></a>
            <!--logo end-->
            
            <span >
                <ul class="nav pull-right top-menu">
                    
                    <li>
                        <button class="btn btn-primary "><a asp-controller="Home" asp-action="Register">Register</a> </button>
                    </li>
                    
                </ul>
                
            </span>
            

            <div class="top-nav ">
                <!--search & user info start-->
                <ul class="nav pull-right top-menu"">
                    <li>
                        <input type="text" class="form-control search" placeholder="Search">
                    </li>
                    <!-- user login dropdown start-->
                    @{
                        if (User.Identity.IsAuthenticated)
                        {
                            <li class="dropdown">
                                <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                    <img alt="" src="/OuterTools/img/avatar1_small.jpg">
                                    <span class="username">@User.Identity.Name</span>
                                    <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu extended logout">
                                    <div class="log-arrow-up"></div>

                                    @RenderSection("Sepet", false)

                                    <li><a asp-controller="Home" asp-action="SignOut"><i class="icon-key"></i> Log Out</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li>
                                <button class="btn btn-success "><a asp-controller="Home" asp-action="SignIn">Sign-In</a> </button>

                            </li>
                            <li>
                                @RenderSection("Sepet", false)
                            </li>
                        }
                    }

                    <!-- user login dropdown end -->
                </ul>
                <!--search & user info end-->
            </div>
        </header>
        <!--header end-->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <!-- sidebar menu start-->
                <ul class="sidebar-menu" id="nav-accordion">
                    <li>
                        <a class="active" href="index.html">
                            <i class="icon-dashboard"></i>
                            <span>Watch List</span>
                        </a>
                    </li>
                    
                    <li>
                        <a class="active" href="index.html">
                            <i class="icon-dashboard"></i>
                            <span>All Movies</span>
                        </a>
                    </li>

                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="icon-laptop"></i>
                            <span>Admin Panel</span>
                        </a>
                        <ul class="sub">
                            <li><a href="boxed_page.html">Boxed Page</a></li>
                            <li><a href="horizontal_menu.html">Horizontal Menu</a></li>
                            <li><a href="language_switch_bar.html">Language Switch Bar</a></li>
                        </ul>
                    </li>

                    <li class="sub-menu">
                        <a href="javascript:;">
                            <i class="icon-shopping-cart"></i>
                            <span>Genres</span>
                        </a>
                        <ul class="sub">
                            <li><a href="product_list.html">List View</a></li>
                            <li><a href="product_details.html">Details View</a></li>
                        </ul>
                    </li>

                    
                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->
        <!--main content start-->
        <section id="main-content">
            <section class="wrapper">
               @RenderBody()
               
            </section>
        </section>
        <!--main content end-->
        <!--footer start-->
        
        <!--footer end-->
    </section>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="/OuterTools/js/jquery.js"></script>
    <script src="/OuterTools/js/jquery-1.8.3.min.js"></script>
    <script src="/OuterTools/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="/OuterTools/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="/OuterTools/js/jquery.scrollTo.min.js"></script>
    <script src="/OuterTools/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="/OuterTools/js/jquery.sparkline.js" type="text/javascript"></script>
    <script src="/OuterTools/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.js"></script>
    <script src="/OuterTools/js/owl.carousel.js"></script>
    <script src="/OuterTools/js/jquery.customSelect.min.js"></script>
    <script src="/OuterTools/js/respond.min.js"></script>

    <script class="include" type="text/javascript" src="/OuterTools/js/jquery.dcjqaccordion.2.7.js"></script>

    <!--common script for all pages-->
    <script src="/OuterTools/js/common-scripts.js"></script>

    <!--script for this page-->
    <script src="/OuterTools/js/sparkline-chart.js"></script>
    <script src="/OuterTools/js/easy-pie-chart.js"></script>
    <script src="/OuterTools/js/count.js"></script>

    <script>

        //owl carousel

        $(document).ready(function () {
            $("#owl-demo").owlCarousel({
                navigation: true,
                slideSpeed: 300,
                paginationSpeed: 400,
                singleItem: true,
                autoPlay: true

            });
        });

        //custom select box

        $(function () {
            $('select.styled').customSelect();
        });

    </script>

</body>
</html>
